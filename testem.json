{
	"framework": "mocha",
	"launch_in_dev": [
		"chrome"
	],
	"src_files": [
		"app/tests/*Test.coffee"
	],
	"serve_files": [
		"app/tests/helpers/chai.js",
		"app/tests/testConfig.js",
		"app/tests/*Test.js"
	],
	"before_tests": "coffee -c app/tests/*Test.coffee",
	"on_exit": "rm -rf app/tests/*Test.js"
}